<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        tools:context=".view.main.MainActivity">

    <TextView
            android:id="@+id/lb_agent_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Agent Profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/lb_full_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Full name:"
            app:layout_constraintEnd_toStartOf="@+id/tv_full_name"
            app:layout_constraintStart_toStartOf="@+id/lb_agent_profile"
            app:layout_constraintTop_toBottomOf="@+id/lb_agent_profile" />

    <TextView
            android:id="@+id/tv_full_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="John Doe"
            app:layout_constraintEnd_toEndOf="@+id/lb_agent_profile"
            app:layout_constraintStart_toEndOf="@+id/lb_full_name"
            app:layout_constraintTop_toBottomOf="@+id/lb_agent_profile" />

    <TextView
            android:id="@+id/lb_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Username"
            app:layout_constraintEnd_toStartOf="@+id/tv_username"
            app:layout_constraintStart_toStartOf="@+id/lb_full_name"
            app:layout_constraintTop_toBottomOf="@+id/lb_full_name" />

    <TextView
            android:id="@+id/tv_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="username"
            app:layout_constraintEnd_toEndOf="@+id/tv_full_name"
            app:layout_constraintStart_toEndOf="@+id/lb_username"
            app:layout_constraintTop_toBottomOf="@+id/tv_full_name" />

    <TextView
            android:id="@+id/lb_national_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="National ID"
            app:layout_constraintEnd_toStartOf="@+id/tv_national_id"
            app:layout_constraintStart_toStartOf="@+id/lb_username"
            app:layout_constraintTop_toBottomOf="@+id/lb_username" />

    <TextView
            android:id="@+id/tv_national_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="National ID"
            app:layout_constraintEnd_toEndOf="@+id/tv_username"
            app:layout_constraintStart_toEndOf="@+id/lb_national_id"
            app:layout_constraintTop_toBottomOf="@+id/tv_username" />

    <TextView
            android:id="@+id/lb_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Address"
            app:layout_constraintEnd_toStartOf="@+id/tv_address"
            app:layout_constraintStart_toStartOf="@+id/lb_national_id"
            app:layout_constraintTop_toBottomOf="@+id/lb_national_id" />

    <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Address"
            app:layout_constraintEnd_toEndOf="@+id/tv_national_id"
            app:layout_constraintStart_toEndOf="@+id/lb_address"
            app:layout_constraintTop_toBottomOf="@+id/tv_national_id" />

    <TextView
            android:id="@+id/lb_vehicle_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Vehicle Type"
            app:layout_constraintEnd_toStartOf="@+id/tv_vehicle_type"
            app:layout_constraintStart_toStartOf="@+id/lb_address"
            app:layout_constraintTop_toBottomOf="@+id/lb_address" />

    <TextView
            android:id="@+id/tv_vehicle_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Motocycle"
            app:layout_constraintEnd_toEndOf="@+id/tv_address"
            app:layout_constraintStart_toEndOf="@+id/lb_vehicle_type"
            app:layout_constraintTop_toBottomOf="@+id/tv_address" />

    <TextView
            android:id="@+id/lb_plate_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Plate Number"
            app:layout_constraintEnd_toStartOf="@+id/tv_plate_number"
            app:layout_constraintStart_toStartOf="@+id/lb_vehicle_type"
            app:layout_constraintTop_toBottomOf="@+id/lb_vehicle_type" />

    <TextView
            android:id="@+id/tv_plate_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Plate Number"
            app:layout_constraintEnd_toEndOf="@+id/tv_vehicle_type"
            app:layout_constraintStart_toEndOf="@+id/lb_plate_number"
            app:layout_constraintTop_toBottomOf="@+id/tv_vehicle_type" />

    <Button
            android:id="@+id/btn_log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/action_logout"
            />

</androidx.constraintlayout.widget.ConstraintLayout>